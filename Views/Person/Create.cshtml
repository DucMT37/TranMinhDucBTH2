@model TranMinhDucBTH2.Models.Person
<h1>Tao moi 1 person</h1>
<hr>
<div class ="row">
    <div class="col-md-4">
        <from asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonID" class="control-label"></label>
                <input asp-for="PersonID" class="form-control">
                <span asp-validation="PersonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonName" class="control-label"></label>
                <input asp-for="PersonName" class="form-control">
                <span asp-validation="PersonName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save">
                <a class="btn btn-success" asp-action="Index">Danh Sach Person</a>
            </div>
        </from>
    </div>
</div>
